@model Web_Ban_Hang.Models.Product

@{
    ViewBag.Title = "DetailCus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="containt" style="margin-top:30px;margin-left:160px;">
    <div style=" font-size: 20px; font-weight: 600; margin-bottom: 2%; margin-right: 80%;">
        <a href="@Url.Action("Index", "Product")" class="product-text" style=" font-weight: 100; color: crimson;">Trang Chủ</a> / Sản Phẩm

    </div>
    <div class="col-md-6" style="margin-left: -100px;">

        <img src="@Url.Content(Model.ImagePro)" style="width:300px; margin-left:-45px" />
    </div>

    <div class="col-md-4" style="margin-top: -10px; font-size: 30px; right: 0.5%;">
        @*<p> @Html.DisplayFor(model => model.NamePro)</p> <br />*@
        <p style="font-size: 30px; margin-left: -40px;"> @Html.DisplayFor(model => model.NamePro)</p>
        <p style="color: red; font-family: cursive; margin-left: -50px;">  @Html.DisplayFor(model => model.Price)0 đ</p>
        <div id="div-footer">
            <h3> Thông Tin Sản Phẩm </h3> <hr />
            <p style="text-align:start;font-size:16px;">
                @Html.DisplayFor(model => model.DecriptionPro)
            </p>
        </div>

        <p class="btn btn-success" style="margin-top: 20%; height: 60px; background-color: darksalmon">  <a href="/ShoppingCart/AddToCart/ @Model.ProductID" class="btn btn-defaul" style="text-align: center; font-size: 20px; ">Mua Ngay</a></p>

    </div>

</div>
