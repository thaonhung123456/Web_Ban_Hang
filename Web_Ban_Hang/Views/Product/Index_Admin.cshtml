@model IEnumerable<Web_Ban_Hang.Models.Product>

@{
    ViewBag.Title = "Index_Admin";
    Layout = "~/Views/Shared/_Layout_Create.cshtml";
}

<h1>DANH MỤC SẢN PHẨM</h1>
<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create", "Product")
</p>
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <input type="text" name="_name" />
    <input type="submit" value="Search" />
}
<br />
<table class="table table-bordered" style="border-width:thick">
    <tr style="white-space: nowrap">
        <th> Tên Sản phẩm </th>
        <th> Mô tả </th>
        <th> Đơn giá </th>
        <th> Hình ảnh </th>
        <th> Loại Sản phẩm </th>
        <th> Số lượng </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td> @Html.DisplayFor(modelItem => item.NamePro) </td>
    <td style=""> @Html.DisplayFor(modelItem => item.DecriptionPro) </td>
    <td> @Html.DisplayFor(modelItem => item.Price) </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.ImagePro)*@
        <img src="@Url.Content(item.ImagePro)" width="100" height="100" />
    </td>
    <td> @Html.DisplayFor(modelItem => item.Category1.NameCate) </td>
    <td> @Html.DisplayFor(modelItem => item.Quantity) </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
    </td>
</tr>
    }

</table>